{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    // Environment Settings
    "module": "commonjs",
    "target": "ES2020",
    // Interoperabilidad de m√≥dulos (IMPORTANTE para Express)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Recommended Options
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    // Para Node.js
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}